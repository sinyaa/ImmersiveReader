{
  "name": "immersive-reader",
  "version": "1.0.0",
  "description": "Immersive Reader Control for ReactJS",
  "author": "sinyaa",
  "license": "GPL-3.0 License",
  "repository": "sinyaa/immersive-reader",
  "main": "dist/immersive-reader.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "build": "rollup -c",
    "start": "rollup -c -w",
    "test": "jest"
  },
  "dependencies": {
    "@microsoft/immersive-reader-sdk": "^1.1.0",
    "enzyme": "^3.11.0",
    "react-test-renderer": "^16.13.1"
  },
  "peerDependencies": {
    "react": ">= 16.8.0 < 2",
    "react-dom": ">= 16.8.0 < 2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleNameMapper": {
      "^.+\\.css$": "identity-obj-proxy",
      "^(app/.+)$": "<rootDir>/src/$1/",
      "^(components/.+)$": "<rootDir>/src/$1/",
      "^(stores/.+)$": "<rootDir>/src/$1/",
      "^(views/.+)$": "<rootDir>/src/$1/",
      "^(assets/.+)$": "<rootDir>/src/$1/",
      "^(models/.+)$": "<rootDir>/src/$1/"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "automock": false
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.6",
    "@types/jest": "^26.0.13",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "jest": "^26.4.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rollup": "^1.29.0",
    "rollup-plugin-sass": "^1.2.2",
    "rollup-plugin-typescript2": "^0.25.3",
    "ts-jest": "^26.3.0",
    "typescript": "^2.8.3"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "immersive reader",
    "immersive"
  ]
}
